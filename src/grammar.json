{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "ink",
  "rules": {
    "program": {
      "type": "SEQ",
      "members": [
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "knot"
          }
        },
        {
          "type": "PATTERN",
          "value": "\\n"
        }
      ]
    },
    "knot": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "knot_start"
        },
        {
          "type": "FIELD",
          "name": "name",
          "content": {
            "type": "SYMBOL",
            "name": "identifier"
          }
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "rest"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "body"
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "body": {
      "type": "REPEAT1",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "stitch"
          },
          {
            "type": "SYMBOL",
            "name": "dialog"
          }
        ]
      }
    },
    "stitch": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "stitch_start"
        },
        {
          "type": "FIELD",
          "name": "name",
          "content": {
            "type": "SYMBOL",
            "name": "identifier"
          }
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "rest"
            },
            {
              "type": "BLANK"
            }
          ]
        }
      ]
    },
    "inline_logic": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "{"
        },
        {
          "type": "PATTERN",
          "value": "[^}]+"
        },
        {
          "type": "STRING",
          "value": "}"
        }
      ]
    },
    "dialog": {
      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "\\n"
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "CHOICE",
            "members": [
              {
                "type": "FIELD",
                "name": "text",
                "content": {
                  "type": "SYMBOL",
                  "name": "text"
                }
              },
              {
                "type": "SYMBOL",
                "name": "inline_logic"
              }
            ]
          }
        }
      ]
    },
    "identifier": {
      "type": "PATTERN",
      "value": "\\p{L}+"
    },
    "knot_start": {
      "type": "PATTERN",
      "value": "\\n\\s*={2,}=*\\s*"
    },
    "stitch_start": {
      "type": "PATTERN",
      "value": "\\n\\s*=\\s*"
    },
    "text": {
      "type": "PATTERN",
      "value": "[^\\n{]+"
    },
    "rest": {
      "type": "PATTERN",
      "value": "[^\\n]+"
    }
  },
  "extras": [],
  "conflicts": [
    [
      "knot"
    ],
    [
      "body"
    ]
  ],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": []
}
