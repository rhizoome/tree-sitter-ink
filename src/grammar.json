{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "ink",
  "rules": {
    "program": {
      "type": "REPEAT",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "CHOICE",
            "members": [
              {
                "type": "SYMBOL",
                "name": "body"
              },
              {
                "type": "SYMBOL",
                "name": "knot"
              }
            ]
          }
        ]
      }
    },
    "body": {
      "type": "PREC_RIGHT",
      "value": 0,
      "content": {
        "type": "REPEAT1",
        "content": {
          "type": "SYMBOL",
          "name": "body_line"
        }
      }
    },
    "body_line": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "body_start"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "CHOICE",
              "members": [
                {
                  "type": "SYMBOL",
                  "name": "choice_text"
                },
                {
                  "type": "SYMBOL",
                  "name": "code_text"
                },
                {
                  "type": "SYMBOL",
                  "name": "dialog_text"
                }
              ]
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "line_end"
        }
      ]
    },
    "knot": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "knot_start"
        },
        {
          "type": "SYMBOL",
          "name": "text"
        },
        {
          "type": "SYMBOL",
          "name": "line_end"
        },
        {
          "type": "SYMBOL",
          "name": "body"
        }
      ]
    },
    "choice_text": {
      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "\\+"
        },
        {
          "type": "SYMBOL",
          "name": "text"
        }
      ]
    },
    "code_text": {
      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "~"
        },
        {
          "type": "SYMBOL",
          "name": "text"
        }
      ]
    },
    "dialog_text": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "text"
        }
      ]
    },
    "text": {
      "type": "REPEAT1",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "arrow"
          },
          {
            "type": "SYMBOL",
            "name": "minus"
          },
          {
            "type": "SYMBOL",
            "name": "other"
          }
        ]
      }
    },
    "other": {
      "type": "PREC",
      "value": -1,
      "content": {
        "type": "PATTERN",
        "value": "."
      }
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [
    {
      "type": "SYMBOL",
      "name": "arrow"
    },
    {
      "type": "SYMBOL",
      "name": "minus"
    },
    {
      "type": "SYMBOL",
      "name": "body_start"
    },
    {
      "type": "SYMBOL",
      "name": "knot_start"
    },
    {
      "type": "SYMBOL",
      "name": "line_end"
    }
  ],
  "inline": [],
  "supertypes": []
}
