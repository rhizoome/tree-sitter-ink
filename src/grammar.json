{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "ink",
  "rules": {
    "program": {
      "type": "REPEAT",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "body"
          },
          {
            "type": "SYMBOL",
            "name": "empty_line"
          }
        ]
      }
    },
    "knot": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "knot_start"
        },
        {
          "type": "PATTERN",
          "value": "\\s*===*\\s"
        },
        {
          "type": "SYMBOL",
          "name": "identifier"
        }
      ]
    },
    "body": {
      "type": "REPEAT1",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "paragraph"
          }
        ]
      }
    },
    "paragraph": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "body_start"
        },
        {
          "type": "SYMBOL",
          "name": "text_line"
        },
        {
          "type": "SYMBOL",
          "name": "line_end"
        }
      ]
    },
    "dialog_line": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "choice_start"
        },
        {
          "type": "PATTERN",
          "value": "\\s*\\*"
        },
        {
          "type": "SYMBOL",
          "name": "text_line"
        }
      ]
    },
    "text_line": {
      "type": "REPEAT1",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "arrow"
          },
          {
            "type": "SYMBOL",
            "name": "vocabular"
          }
        ]
      }
    },
    "vocabular": {
      "type": "REPEAT1",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "PATTERN",
            "value": "[\\p{L}_]+"
          },
          {
            "type": "SYMBOL",
            "name": "minus"
          },
          {
            "type": "STRING",
            "value": "-"
          }
        ]
      }
    },
    "identifier": {
      "type": "PATTERN",
      "value": "[\\p{L}_]+"
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [
    [
      "body"
    ],
    [
      "vocabular"
    ]
  ],
  "precedences": [],
  "externals": [
    {
      "type": "SYMBOL",
      "name": "arrow"
    },
    {
      "type": "SYMBOL",
      "name": "minus"
    },
    {
      "type": "SYMBOL",
      "name": "body_start"
    },
    {
      "type": "SYMBOL",
      "name": "knot_start"
    },
    {
      "type": "SYMBOL",
      "name": "choice_start"
    },
    {
      "type": "SYMBOL",
      "name": "empty_line"
    },
    {
      "type": "SYMBOL",
      "name": "line_end"
    }
  ],
  "inline": [],
  "supertypes": []
}
